<?xml version="1.0" encoding="UTF-8"?>
<config>
    <application 
        title="Atlas ÉcoSanté Montpellier"         
        id="omees_ecosante" 
        style="apps/ecosante/omees_theme.css" 
        logo="apps/ecosante/img/ecosante_logo.svg" 
        favicon="" 
        help="apps/ecosante/templates/home.html" exportpng="true" showhelp="true" 
        templaterightinfopanel="brut"
        templatemobileinfopanel="brut">
    </application>

    <mapoptions maxzoom="20" projection="EPSG:3857" center="475052.0742070874, 5398077.900420676" zoom="10"/>

    <baselayers style="gallery">
        <baselayer visible="true" id="positron" thumbgallery="img/basemap/positron.png" title="CartoDb" label="Positron" type="OSM" url="https://{a-c}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png" attribution="Map tiles by  &lt;a href=&quot;https://cartodb.com/attributions&quot;&gt;CartoDb&lt;/a&gt;, under  &lt;a href=&quot;https://creativecommons.org/licenses/by/3.0/&quot;&gt;CC BY 3.0 &lt;/a&gt;" /> 
        <baselayer  type="OSM" id="osm1" attributioncollapsible="false" label="OpenStreetMap" title="OpenStreetMap" thumbgallery="img/basemap/osm.png" 
            url="http://{a-c}.tile.openstreetmap.org/{z}/{x}/{y}.png" 
            attribution="© MapQuest. Données : les contributeurs d'&lt;a href='https://www.openstreetmap.org/' target='_blank'>OpenStreetMap &lt;/a>,  &lt;a href='https://www.openstreetmap.org/copyright' target='_blank'>ODbL &lt;/a>" visible="false"/>
        <baselayer  type="WMTS" id="ortho" label="Photo aérienne IGN" title="GéoPortail" maxscale="1000" thumbgallery="img/basemap/ortho.jpg"
                url="https://data.geopf.fr/wmts" layers="ORTHOIMAGERY.ORTHOPHOTOS" format="image/jpeg" visible="false" fromcapacity="false"
                attribution="&lt;a href='https://geoservices.ign.fr/services-geoplateforme-diffusion' target='_blank'>&lt;img src='img/basemap/geoservices.png'>&lt;/a>" style="normal" matrixset="PM" maxzoom="22"/>
    </baselayers>

    <olscompletion url="https://data.geopf.fr/geocodage/search" type="search" attribution="La recherche d'adresse est un service de l'IGN via les données de la BAN"/>

    <searchparameters bbox="false" localities="true" features="false" /> 

    <extensions>
        <extension type="component" id="filter" path="apps/ecosante/addons"/>
    </extensions>

    <styles>
        <selectionstyle>
            <point radius="7" fillcolor="224, 176, 109" opacity="0.2" strokecolor="224, 176, 109" strokewidth="2" />
            <line opacity="1" strokecolor="224, 176, 109" strokewidth="3"/>
            <polygon fillcolor="224, 176, 109" opacity="0" strokecolor="224, 176, 109" strokewidth="3" />
        </selectionstyle>
        <subselectionstyle>
            <point radius="7" fillcolor="224, 176, 109" opacity="0.4" strokecolor="224, 176, 109" strokewidth="2" />
            <line opacity="1" strokecolor="224, 176, 109" strokewidth="3"/>
            <polygon fillcolor="224, 176, 109" opacity="0" strokecolor="224, 176, 109" strokewidth="2" />
        </subselectionstyle>
    </styles>

    <themes mini="true" legendmini="false"> 
            <theme name="Écologie de la santé" collapsed="true" id="ecosante" icon="fas fa-leaf">
                <layer id="acteurs_ecosante" name="Acteurs en écologie de la santé"  visible="true" tiled="false"
                        searchable="false" queryable="true"  
                        infoformat="application/vnd.ogc.gml" featurecount="20"
                        type="customlayer"
                        url="apps/ecosante/customlayers/acteurs_ecosante.js"    
                        customcontrol="true" customcontrolpath="apps/ecosante/customcontrols"
                        attribution="OMEES - Observatoire Montpelliérain en Écologie et Évolution de la Santé" 
                        tooltip="true" tooltipcontent="&lt;b&gt;{{type_acteur}}&lt;/b&gt; &lt;br&gt; {{libelle_structure}}"
                        metadata="https://geodata.bac-a-sable.inrae.fr/datahub/dataset/8fefc36c-4ff6-4f1a-b938-bcaea15598fd"
                        metadata-csw="https://geodata.bac-a-sable.inrae.fr/geonetwork/srv/fre/csw?SERVICE=CSW&amp;VERSION=2.0.2&amp;REQUEST=GetRecordById&amp;elementSetName=full&amp;ID=8fefc36c-4ff6-4f1a-b938-bcaea15598fd" >
                        <template url="apps/ecosante/templates/acteurs_ecosante.mst"></template>
                </layer>
                <layer id="projets_ecosante" name="Projets en écologie de la santé"  visible="true" tiled="false"
                        searchable="false" queryable="true"  
                        infoformat="application/vnd.ogc.gml" featurecount="20"
                        type="customlayer"
                        url="apps/ecosante/customlayers/projets_ecosante.js" 
                        attribution="OMEES - Observatoire Montpelliérain en Écologie et Évolution de la Santé" 
                        customcontrol="true" customcontrolpath="apps/ecosante/customcontrols"
                        tooltip="true" tooltipcontent="{{visualiseur_sites_etude}}"
                        metadata="https://geodata.bac-a-sable.inrae.fr/datahub/dataset/4825d455-035c-4199-a465-2d4999f927ab"
                        metadata-csw="https://geodata.bac-a-sable.inrae.fr/geonetwork/srv/fre/csw?SERVICE=CSW&amp;VERSION=2.0.2&amp;REQUEST=GetRecordById&amp;elementSetName=full&amp;ID=4825d455-035c-4199-a465-2d4999f927ab" >
                        <template url="apps/ecosante/templates/projets_ecosante.mst"></template>
                </layer>
            </theme>
    </themes>
</config>