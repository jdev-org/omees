{{#features}}
    <li id="item_{{feature_ol_uid}}" class="item" style="width:100%;">
        <div class="item__card item__acteur">
                <h5>{{#sigle_structure}}{{sigle_structure}} â”€ {{/sigle_structure}}{{libelle_structure}} </h5> 
                {{#type_acteur}}
                <div>
                    <div class="cardBody_subtitle">Type d'acteur</div>                    
                    <div>{{type_acteur}}</div>
                </div>
                {{/type_acteur}}
                {{#domaines_scientifiques}}
                <div>
                    <div class="cardBody_subtitle">Domaine(s) scientifiques</div>                    
                    <div >{{domaines_scientifiques}}</div>
                </div>
                {{/domaines_scientifiques}}
                <div class="my-4">
                    {{#contact}}<a class="cardBtn cardBtn__prim" href="mailto:{{contact}}" target="_blank">Contact</a>{{/contact}}
                    {{#site_web}}<a class="cardBtn cardBtn__outline" href="{{site_web}}" target="_blank">En savoir plus</a>{{/site_web}}
