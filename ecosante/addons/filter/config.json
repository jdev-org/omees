{
  "js": ["js/filter.js", "../lib/jquery.easyDrag.min.js"],
  "css": "css/filter.css",
  "html": "filter.html",
  "target": "page-content-wrapper",
  "options": {
    "mviewer": {
      "omees_ecosante": {
        "title": "Filtrer",
        "open": true,
        "zoomOnFeatures": false,
        "style": {
            "top":"7em",
            "left": "25em"
        },
        "layers": [
          {
            "layerId": "projets_ecosante",
            "downloadFormats": [
              { "label": "CSV", "format": "CSV" },
              { "label": "Shp", "format": "SHAPE-ZIP" },
              { "label": "Excel", "format": "excel" }
            ],
            "filter": [              
              {
                "attribut": "milieux",
                "type": "button",
                "label": "Milieux",
                "dataSeparator": ";",
                "updateOnChange": false
              },
              {
                "attribut": "thematiques",
                "type": "button",
                "label": "Thématiques",
                "dataSeparator": ";",
                "updateOnChange": false
              }, 
              {
                "attribut": "sous_thematiques",
                "type": "combobox",
                "label": "Sous-thématiques",
                "dataSeparator": ";",
                "updateOnChange": false
              },              
              {
                "attribut": "porteur_etablissement",
                "type": "button",
                "label": "Porteurs de projet",
                "dataSeparator": ";",
                "updateOnChange": true
              }
            ]
          }
        ]
      }
    }
  }
}
